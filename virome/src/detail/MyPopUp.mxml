<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				layout="absolute" minWidth="900" maxHeight="800"
				showCloseButton="true" close="removeMe()" 
				creationComplete="onCreationComplete()">
	
	<fx:Script>
		<![CDATA[
			import mx.containers.VBox;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			
			private var _display:VBox = new VBox();
			
			[Bindable] public function set display(d:VBox):void {
				_display = d;
			}
			
			public function get display():VBox {
				return _display;
			}
			
			private function onCreationComplete():void{
				_display.percentWidth = 100;
				_display.percentHeight = 100;
				
				this.percentWidth = 100;
				
				this.addChild(_display);
				
				this.validateNow();
				
				PopUpManager.centerPopUp(this);
			}
			
			private function removeMe():void{
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
</mx:TitleWindow>
